<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tm.nsfantom.piechart.activity.MainActivity">

        <Button
            android:id="@+id/btnPieChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PieChart"
            app:layout_constraintBottom_toTopOf="@+id/btnCustomCheckList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/btnCustomCheckList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckList"
            app:layout_constraintBottom_toTopOf="@+id/btnContryList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPieChart" />

        <Button
            android:id="@+id/btnContryList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContryList"
            app:layout_constraintBottom_toTopOf="@+id/btnNotification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCustomCheckList" />

        <Button
            android:id="@+id/btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            app:layout_constraintBottom_toTopOf="@+id/btnDragDrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnContryList" />

        <Button
            android:id="@+id/btnDragDrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag and DROP"
            app:layout_constraintBottom_toTopOf="@+id/btnRing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNotification" />
        <Button
            android:id="@+id/btnRing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RingProgress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDragDrop" />
    </android.support.constraint.ConstraintLayout>
</layout>
